<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="shekhovtsov.nikita.rieltorcompany.TablesEdit.RegionEditActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize">

        <TextView
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Редактирование элемента"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"/>

        <ImageView
            android:id="@+id/button_back_payment_pattern"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:onClick="on_button_back_region_edit_click"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_arrow_back" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/toolbar_shadow"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Код региона:"
        android:textStyle="italic"
        android:gravity="center"
        android:textSize="15sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="123"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Название региона:"
        android:textStyle="italic"
        android:gravity="center"
        android:textSize="15sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Волжский"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/button_save"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/background_button"
            android:text="Сохранить"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="20dp"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="17sp" />

        <Button
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/button_delete"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/background_button"
            android:text="Удалить"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="17sp" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignBottom="@+id/button_delete"
            android:layout_centerHorizontal="true"
            android:background="@drawable/background_action_bar_button"
            android:onClick="on_add_button_click"
            android:src="@drawable/ic_add" />


    </RelativeLayout>



</LinearLayout>
